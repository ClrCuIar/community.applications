	$.post(URL,{action:'stopStartContainer',stopStart:stopStart,id:id,name:name},function(data) {
		if (data) {
			if ( myTrim(data) == "ok" ) {
				myCloseAlert();
				refreshDisplay();
			} else {
				var msg = "stopStart" ? "start" : "stop";
				swal({
					title: "Failed to "+msg+" "+name,
					type: "error",
					showCancelButton: false,
					showConfirmButton: true,
					closeOnConfirm: true,
					allowOutsideClick: false,
					showLoaderOnConfirm: false,
					html: true
				}, function(isConfirm) {
					if (isConfirm) {
						myCloseAlert();
						refreshDisplay();
					}
